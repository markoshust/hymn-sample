{
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "globals": {
    "describe": true,
    "expect": true,
    "it": true,
    "window": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "meteor"
  ],
  "rules": {
    "import/extensions": [2, { "js": "never" }],
    "import/no-extraneous-dependencies": [0],
    "react/jsx-filename-extension": [0],
    "react/require-extension": [0]
  },
  "settings": {
    "import/resolver": "meteor"
  }
}
